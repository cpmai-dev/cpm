{
  "name": "cpm",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "The package manager for Claude Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/cpm-ai/cpm"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "cli": "pnpm --filter @cpm/cli",
    "audit": "pnpm audit --audit-level=high",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm --filter @cpm/cli publish --tag beta --access public",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.0",
    "turbo": "^2.3.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.54.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
